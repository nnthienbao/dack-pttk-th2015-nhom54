<UserControl
    x:Class="DACK_PTTKPM.UC.TextboxNumber"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DACK_PTTKPM.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="22"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="tb_TextBox"
            Grid.Row="0"
            PreviewTextInput="tb_TextBox_PreviewTextInput" />
    </Grid>
</UserControl>
