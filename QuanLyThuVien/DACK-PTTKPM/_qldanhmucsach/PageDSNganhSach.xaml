<Page x:Class="DACK_PTTKPM.PageDSNganhSach"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DACK_PTTKPM"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="NganhSach">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFECF2F9" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Danh sách ngành sách" FontSize="20" FontWeight="bold" Foreground="Red"
            HorizontalAlignment="center" Grid.ColumnSpan="2" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0 2 2 0" BorderBrush="#B9C9DA">
                <StackPanel Orientation="Vertical" Margin="20, 10, 20, 10">
                    <Label Content="Tìm kiếm theo mã ngành" FontWeight="Bold" />
                    <TextBox x:Name="tb_TimKiemMaNganhSach" Text="Nhập mã tìm kiếm" Margin="20,5,0,0"/>
                    <Label Content="Tìm kiếm theo tên ngành"  Margin="0,15,0,0" FontWeight="bold" />
                    <TextBox x:Name="tb_TimKiemTenNganhSach" Text="Nhập tên ngành sách tìm kiếm" Margin="20,5,0,0" />
                    <Button x:Name="btn_TimKiemNganhSach" Content="Tìm kiếm" Height="25" Margin="40,10,40,0"></Button>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" BorderThickness="0 1 2 0" BorderBrush="#B9C9DA">
                <StackPanel Orientation="Vertical"  Margin="20, 0, 20, 10">
                    <Label Content="Thông tin ngành sách" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="Red"/>
                    <StackPanel Height="25" Orientation="Horizontal">
                        <Label Content="Mã ngành sách:" FontWeight="Bold" Foreground="Red" Width="100" />
                        <Label x:Name="lb_KQTK_MaNganhSach" Content="" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Height="25" Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="Tên ngành sách:" FontWeight="Bold" Foreground="Red" Width="100" />
                        <Label x:Name="lb_KQTK_TenNganhSach" Content="" FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="0 2 0 0" BorderBrush="#B9C9DA" >
            <DataGrid x:Name="dataGridNganhSach">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã ngành sách" Width="150"></DataGridTextColumn>
                    <DataGridTextColumn Header="Tên ngành sách" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
