<Page
    x:Class="DACK_PTTKPM.PageDSNhaXuatBan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DACK_PTTKPM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NhaXuatBan"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="#FFECF2F9" />
                <GradientStop Offset="1" Color="White" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.ColumnSpan="2"
            HorizontalAlignment="center"
            Content="Danh sách nhà xuất bản"
            FontSize="20"
            FontWeight="bold"
            Foreground="Red" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                BorderBrush="#B9C9DA"
                BorderThickness="0,2,2,0">
                <StackPanel Margin="20,10,20,10" Orientation="Vertical">
                    <RadioButton
                        x:Name="rd_TimKiemNXBTheoMa"
                        Content="Tìm kiếm theo mã nhà xuất bản"
                        FontWeight="Bold"
                        GroupName="rdGroup_TimKiemNXB"
                        IsChecked="true" />
                    <TextBox
                        x:Name="tb_TimKiemNXBTheoMa"
                        Margin="20,5,0,0"
                        KeyDown="tb_TimKiemNXBTheoMa_KeyDown" />
                    <RadioButton
                        x:Name="rd_TimKiemNXBTheoTen"
                        Margin="0,15,0,0"
                        Content="Tìm kiếm theo tên nhà xuất bản"
                        FontWeight="bold"
                        GroupName="rdGroup_TimKiemNXB" />
                    <TextBox
                        x:Name="tb_TimKiemNXBTheoTen"
                        Margin="20,5,0,0"
                        KeyDown="tb_TimKiemNXBTheoTen_KeyDown" />
                    <Button
                        x:Name="btn_TimKiemNXB"
                        Width="100"
                        Height="25"
                        Margin="8"
                        Click="btn_TimKiemNXB_Click"
                        Content="Tìm kiếm" />
                </StackPanel>
            </Border>
            <Border
                Grid.Row="1"
                BorderBrush="#B9C9DA"
                BorderThickness="0,1,2,0">
                <StackPanel Margin="20,0,20,10" Orientation="Vertical">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Thông tin nhà xuất bản"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Red" />
                    <StackPanel
                        Height="25"
                        Margin="0,5,0,0"
                        Orientation="Horizontal">
                        <Label
                            Width="120"
                            Content="Mã nhà xuất bản:"
                            FontWeight="Bold"
                            Foreground="Red" />
                        <Label
                            x:Name="lb_MaNXBChon"
                            Width="238"
                            Content=""
                            FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <Label
                            Width="120"
                            HorizontalAlignment="Left"
                            Content="Tên nhà xuất bản:"
                            FontWeight="Bold"
                            Foreground="Red" />
                        <Label
                            x:Name="lb_TenNXBChon"
                            Content=""
                            FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="#B9C9DA"
            BorderThickness="0,2,0,0">
            <DataGrid
                x:Name="dataGridNhaXuatBan"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                Loaded="dataGridNhaXuatBan_Loaded"
                SelectionChanged="dataGridNhaXuatBan_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding pid}"
                        Header="Mã nhà xuất bản" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Ten}"
                        Header="Tên nhà xuất bản" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
